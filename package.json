{
  "name": "npm-packages",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --passWithNoTests --coverage",
    "lint": "eslint 'root/**/*.js' && htmlhint root/html/** && npx stylelint root/css/**",
    "lint-js": "eslint 'root/**/*.js'",
    "lint-html": "htmlhint root/html/**",
    "lint-css": "npx stylelint root/css/**",
    "lint-fix": "eslint 'root/**/*.js' --fix && htmlhint root/html/** && npx stylelint root/css/** --fix",
    "start": "node root/backend/app.js"
  },
  "keywords": [],
  "author": "MoHo Khaleqi",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "root/**/*.js": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "coverageReporters": ["json-summary"]
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "htmlhint": "^0.11.0",
    "husky": "^3.0.4",
    "jest": "^25.0.0",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "ejs": "^3.1.2",
    "express": "^4.17.1",
    "node-persist": "^3.0.5",
    "nodemon": "^2.0.3",
    "superagent": "^5.2.2"
  }
}
